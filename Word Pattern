class Solution:
    def wordPattern(self, pattern: str, s: str) -> bool:
        words=s.split()
        if len(pattern) != len(words):
            return False
        c_to_w={}
        w_to_c={}
        for ch, word in zip(pattern, words):
            if ch in c_to_w:
                if c_to_w[ch] !=word:
                    return False
            else:
                if word in w_to_c:
                    return False
                c_to_w[ch]=word
                w_to_c[word]=ch
        return True




        
